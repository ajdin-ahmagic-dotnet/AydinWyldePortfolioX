@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Mobile";
}

<div id="particles-js" style="position:fixed; inset:0; z-index:-2;"></div>

<div class="parallax-section">
    <h2 class="content-block">Mobile Development</h2>
    <div class="portfolio-grid">
        <div class="portfolio-card">
            <h3>Xamarin / MAUI</h3>
            <p>Cross-platform mobile apps with shared logic and native performance.</p>
        </div>
        <div class="portfolio-card">
            <h3>PWA</h3>
            <p>Progressive Web Apps for offline-first experiences.</p>
        </div>
        <div class="portfolio-card">
            <h3>Testing</h3>
            <p>Device testing strategies and CI for mobile releases.</p>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/particles.js@2.0.0/particles.min.js"></script>
    <script>
        if (window.particlesJS) {
            particlesJS('particles-js', { particles: { number: { value: 40 }, color: { value: '#00ff7a' }, size: { value: 3 } }, interactivity: { events: { onhover: { enable: true, mode: 'grab' } } } });
        }
    </script>
}
